<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/microblink_blue"
        android:minHeight="?attr/actionBarSize"
        android:paddingLeft="15px"
        android:paddingTop="15px"
        android:paddingBottom="15px"
        android:theme="?attr/actionBarTheme"
        app:title="Visitas Registradas"
        app:titleTextColor="#FFFFFF" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginStart="20px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:layout_marginRight="15px"
        android:layout_marginBottom="20px">

        <EditText
            android:id="@+id/ettFindV"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="aÃ±o - mes - dia"
            android:inputType="textPersonName"
            android:onClick="onClick"
            android:paddingLeft="10px" />

        <Button
            android:id="@+id/btnFindV"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:background="@color/microblink_blue"
            android:text="FIND"
            android:textColor="#FDFDFD"
            android:textColorHint="#FFFFFF" />
    </TableRow>

    <ListView
        android:id="@+id/lvlVisit"
        style="@style/Widget.AppCompat.ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/preview_overlay_color"
        android:dividerHeight="3dp"
        android:fadeScrollbars="true"
        android:paddingBottom="50px"></ListView>

    <Button
        android:id="@+id/btnRegresarV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15px"
        android:background="#09B3FF"
        android:text="Regresar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#FAFAFA" />

</LinearLayout>